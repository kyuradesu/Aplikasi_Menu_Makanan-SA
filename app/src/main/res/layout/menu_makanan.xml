<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nama_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/gambar_menu"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:text="Nama :"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/harga_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/gambar_menu"
        app:layout_constraintTop_toBottomOf="@+id/nama_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Harga :"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/gambar_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_width="132dp"
        android:layout_height="147dp"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/deskripsi_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gambar_menu"
        app:layout_constraintTop_toBottomOf="@+id/harga_menu"
        app:layout_constraintVertical_bias="0.0"
        android:layout_width="167dp"
        android:layout_height="76dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:text="Deskripsi :"
        android:textColor="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>